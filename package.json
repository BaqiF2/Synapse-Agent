{
  "name": "synapse-agent",
  "version": "0.1.0",
  "description": "A self-growing AI agent framework based on unified Bash abstraction",
  "type": "module",
  "private": true,
  "bin": {
    "synapse": "./bin/synapse"
  },
  "scripts": {
    "start": "bun run src/cli/index.ts",
    "chat": "bun run src/cli/index.ts chat",
    "lint": "eslint --max-warnings 0 --no-error-on-unmatched-pattern src tests examples",
    "lint:fix": "eslint --max-warnings 0 --no-error-on-unmatched-pattern --fix src tests examples",
    "test": "bun test",
    "test:cov": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "test:e2e": "bun test tests/e2e/",
    "test:cli:e2e": "bun run tests/e2e/cli/index.ts",
    "test:cli:e2e:basic": "bun run tests/e2e/cli/index.ts --scenario=\"Basic Chat\"",
    "test:cli:e2e:file": "bun run tests/e2e/cli/index.ts --scenario=\"File Operations\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/bun": "1.3.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "node-pty": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@inkjs/ui": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "js-tiktoken": "^1.0.21",
    "zod": "^4.3.6"
  }
}
